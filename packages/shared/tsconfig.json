{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./_dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "_dist"]
}
